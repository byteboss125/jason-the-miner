{
  "baseUrl": "[write the base URL here]",
  "uri": "[write the URI]",
  "search": {
    "queryParam": "q"
  },
  "pagination": {
    "mode": "follow",
    "config": {
      "selector": "a.next_page",
      "max": 3,
      "selector-all (for 'all' mode)": ".leftContainer > div:last-child > div a:nth-last-child(2)"
    }
  },
  "title": "Some quotes",
  "elements": {
    "container": ".quoteDetails",
    "parts": [{
      "quote": {
        "selector": ".quoteText",
        "extractor": "regexp:([^―]+)―",
        "filter": "trim"
      }
    }, {
      "author": {
        "selector": ".quoteText > a",
        "filter": "trim"
      }
    }, {
      "book": {
        "selector": ".quoteText > span > i > a"
      }
    }, {
      "author-image": {
        "selector": ".quoteDetails > .leftAlignedImage > img",
        "extractor": "attr:src"
      }
    }, {
      "tags-uri": {
        "selector": ".quoteFooter .left a",
        "extractor": "array:attr:href"
        }
    }]
  }
}
